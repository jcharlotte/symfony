{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<h2>Bonjour
		{{ app.user.pseudo }}</h2>

	<ul class="list-group">
		<li class="list-group-item">Nom :
			{{ app.user.nom }}</li>
		<li class="list-group-item">Prénom :
			{{ app.user.prenom }}</li>
	</ul>

	<h3>Mes emprunts</h3>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Livre</th>
                <th>Emprunté le</th>
                <th>Rendu le</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                {% for emprunt in app.user.emprunts %}
                    <td>{{ emprunt.livre.titre }}</td>
                    <td>{{ emprunt.dateEmprunt|date("d/m/y") }}</td>
                    <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date("d/m/y") : "-" }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

{% endblock %}
