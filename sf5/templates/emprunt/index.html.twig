{% extends 'base.html.twig' %}

{% block title %}Emprunt index{% endblock %}

{% block body %}
    <h1>Emprunt index</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date emprunt</th>
                <th>Date retour</th>
                <th>Titre</th>
                <th>Emprunteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for emprunt in emprunts %}
            <tr>
                <td>{{ emprunt.id }}</td>
                <td>{{ emprunt.dateEmprunt ? emprunt.dateEmprunt|date('Y-m-d') : '' }}</td>
                <td>{{ emprunt.dateRetour ? emprunt.dateRetour|date('Y-m-d') : '' }}</td>
                <td>{{ emprunt.livre.titre }}</td>
                <td> {{ emprunt.abonne.pseudo }}</td>
                <td>
                    <a href="{{ path('emprunt_show', {'id': emprunt.id}) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('emprunt_edit', {'id': emprunt.id}) }}"><i class="fa fa-edit"></i></a>
                    <a href="{{ path('abonne_delete', {'id': emprunt.id}) }}"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('emprunt_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
